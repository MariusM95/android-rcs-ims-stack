<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<CheckBoxPreference
		android:key="rcs_activation"
		android:title="@string/label_rcs_service"
		android:summaryOn="@string/summary_rcs_service_on"
		android:summaryOff="@string/summary_rcs_service_off"/>

    <PreferenceScreen
        android:title="@string/title_presence_settings"
        android:summary="@string/summary_presence_settings">
		<intent android:action="android.intent.action.MAIN"
			android:targetPackage="com.orangelabs.rcs"
			android:targetClass="com.orangelabs.rcs.settings.PresenceSettingsDisplay" />
    </PreferenceScreen>

    <PreferenceScreen
        android:title="@string/title_csh_settings"
        android:summary="@string/summary_csh_settings">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="com.orangelabs.rcs"
            android:targetClass="com.orangelabs.rcs.settings.CShSettingsDisplay" />
    </PreferenceScreen>

    <PreferenceScreen
        android:title="@string/title_messaging_settings"
        android:summary="@string/summary_messaging_settings">
        <intent android:action="android.intent.action.MAIN"
            android:targetPackage="com.orangelabs.rcs"
            android:targetClass="com.orangelabs.rcs.settings.MessagingSettingsDisplay" />
    </PreferenceScreen>
	
    <PreferenceScreen
        android:title="@string/title_user_profile_settings"
        android:summary="@string/summary_user_profile_settings">
        <intent android:action="android.intent.action.MAIN"
            android:targetPackage="com.orangelabs.rcs"
            android:targetClass="com.orangelabs.rcs.settings.UserProfileSettingsDisplay" />
    </PreferenceScreen>
    
</PreferenceScreen>